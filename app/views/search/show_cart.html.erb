<% if @catalog %>
	<h5 class='title center'>Place your order</h5>
	<% form_tag url_for(:action => :buy_catalog) do %>
		<div class='list-items-wrapper card-panel '>
	      <table>
	        <thead>
	          <tr>
              <th><%= 'Product Title' %></th>
              <th><%= ' Price'%> </th>
              <th><%= ' Qty' %></th>
	          </tr>
	        </thead>
	        <tbody>
          <tr>
            <td><%= @catalog.title %></td>
            <td><%= @catalog.price %></td>
            <td><<%= @catalog.quantity %></td>
          </tr>
	        </tbody>
	      </table>
	    </div>
	    <% if @contribution == 'true' %>
	    	<br/>
	    	<div class='contribution_amount'><h5>Contribution Amount</h5></div>
	    	<%= text_field_tag :amount %>
	    <% else %>
	    	<%= hidden_field_tag :amount, @catalog.price %>
	    <% end %>
      <div class="card-panel hoverable">
        <div class='wellwisher_details'>
          <div class='title center'>Wellwisher Details</div>
          <%= hidden_field_tag :cat_id, @catalog.id %>
          <%= hidden_field_tag :contribution, @contribution %>
          <%= label_tag :name %>
          <%= text_field_tag :name %>
          <%= label_tag :contact %>
          <%= text_field_tag :contact %>
          <%= label_tag :address %>
          <%= text_area_tag :address %>
          <%= label_tag :message %>
          <%= text_area_tag :message %>
          <%= submit_tag "Place order", :class => 'place_order_button' %>

        </div>
      </div>
	<% end %>
<% else %>
	<span class="continue_shopping">
		Continue Shopping
	</span>
<% end %>

<style>
header, footer{
  display:none !important;
'}
</style>
