<div class='create-your-wishlist' data-first-step='1' data-last-step='2' data-current-step='1'>
  <!-- get input from user -->
  <div class="row">
    <div class="col s6 offset-s3">

      <form  class='move-up' method='post' class="col s12" action="/search/create_site">
      <div class="card center hoverable">
        <div class="card-content">
          <div class="row">
              <div id='step-1'>
                <span class="card-title black-text">Let's get started</span>
                <div class="row center">
                  <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="icon_prefix" type="text" class="validate" name="name" >
                    <label for="icon_prefix"  data-error="Name is required" data-success="" >First Name</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <i class="material-icons prefix">location_on</i>
                    <input id="icon_prefix2" type="text" class="validate"  name="address"  data-error="Location is required" data-success="" >
                    <label for="icon_prefix2">Location</label>
                  </div>
                </div>
              </div>
              <div id='step-2' class='hide'>
              </div>
          </div>
        </div>
        <div class="card-action">
          <a href="#" class='prev hide'>Prev Step</a>
          <input class='btn' type="submit" value='Next Step'>
        </div>
      </div>
    </form>

    </div>
  </div>
</div>
<% content_for :javascripts do %>
<script>
$(function(){
    var site_id = $.cookies.get('site');
    if(site_id === null){
      $('.search.section').appendTo('#step-2');
      $('.next').click(function(e){
        e.preventDefault();
        var first = $('.create-your-wishlist').data('first-step');
        var last = $('.create-your-wishlist').data('last-step');
        var current= $('.create-your-wishlist').data('current-step');
        var next = Math.min(current +1, last);
        $('#step-'+current).addClass('hide');
        var currentStep = $('#step-'+next).removeClass('hide');
        $('.create-your-wishlist').data('current-step', next);
        $(this).closest('form').trigger('submit');
      });
      /*
      $('.prev').click(function(e){
        e.preventDefault();
        var first = $('.create-your-wishlist').data('first-step');
        var last = $('.create-your-wishlist').data('last-step');
        var current= $('.create-your-wishlist').data('current-step');
        var prev= Math.max(current - 1, first);
        $('#step-'+current).addClass('hide');
        $('#step-'+prev).removeClass('hide');
        $('.create-your-wishlist').data('current-step',prev);
        });
        */
    }
    else{
      $('.create-your-wishlist').addClass('hide');
      Materialize.toast('Pick products for your store', 3000);
      $('#get-started').removeClass('hide');
    }
});
</script>
<% end %>
